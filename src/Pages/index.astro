<script is:inline src="/Scripts/main.js"></script>
<script is:inline src="/Scripts/update.js"></script>
<script is:inline src="/Scripts/egghandler.js"></script>
<script is:inline src="/Scripts/research.js"></script>
<script is:inline src="/Scripts/prestige.js"></script>
<script is:inline src="/Scripts/contracts.js"></script>
<script is:inline src="/Scripts/automation.js"></script>
<script is:inline src="/Scripts/newsticker.js"></script>

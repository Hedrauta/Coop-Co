---
    // All Tabs & Major UI Components 
    import Header from "../Components/Header.astro"
    import NavBar from "../Components/NavBar.astro"
    import EggTab from "../Components/Egg.astro"
    import ResearchTab from "../Components/Research.astro"
    import ContractsTab from "../Components/Contracts.astro"
    import PrestigeTab from "../Components/Prestige.astro"
    import EggspeditionsTab from "../Components/Eggspeditions.astro"
    import AscensionTab from "../Components/Ascension.astro"
    import AchievementsTab from "../Components/Achievements.astro"
    import SettingsTab from "../Components/Settings.astro"
---


<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link id="faviconLink" rel="icon" type="image/png" href="Images/Eggs/egg.png">
    <title>Coop Co</title>
</head>

<body>
    <div id="notificationHolder">
        
    </div> 
    <div id="promptContainer" class="modalContainer">
        <div id="prompt">
            <h3 id="promptTitle"></h3>
            <input id="promptInput" type="text" placeholder="Enter text">
            <button id="promptButton">Submit</button>
        </div>
    </div>
    <div id="alertContainer" class="modalContainer">
        <div id="alert">
            <h3 id="alertTitle">Welcome back gamer!</h3>
            <p id="alertContent">New things have been added since last time</p>
            <button id="closeAlert" onclick="closeModal(0)">Thanks!</button>
            <br>
        </div>
    </div>
    <div id="confirmContainer" class="modalContainer">
        <div id="confirm" class="flexCol">
            <h3 id="confirmTitle">Are you sure?</h3>
            <p id="confirmContent" style="margin-bottom:1vh">New things have been added since last time</p>
            <div class="flexRow">
                <button id="noConfirm" class="redButton" style="margin-right:0.5vw">No!</button>
                <button id="yesConfirm" class="greenButton" style="margin-left:0.5vw">Yes!</button>
            </div>
            <br>
        </div>
    </div>
    <Header />
    <div id="newsHolder">
        <div id="news">
            
        </div>
    </div>
    <div id="game" class="flexCol" style="margin-top:0.5vh;align-self: center;">
        <NavBar />
        <EggTab />
        <ResearchTab />
        <ContractsTab />
        <PrestigeTab />
        <EggspeditionsTab />
        <AscensionTab />
        <AchievementsTab />
        <SettingsTab />
    </div>
</body>

<!-- Internal Scripts -->
<script is:inline src="/Scripts/Internal/BreakEternity.js"></script>
<script is:inline src="/Scripts/Internal/Cache.js"></script>
<script is:inline src="/Scripts/Internal/Formatting.js"></script>
